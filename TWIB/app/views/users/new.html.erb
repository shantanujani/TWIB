<h1>New User</h1>


<%= form_tag(users_url, method: 'post') do %>


  <div>
    <%= label_tag :user_first_name %><br />
    <%= text_field_tag :user_first_name %>
  </div>

  <div>
    <%= label_tag :user_last_name %><br />
    <%= text_field_tag :user_last_name %>
  </div>


  <div>
    <%= submit_tag "Add User" %>
  </div>
<% end %>
	