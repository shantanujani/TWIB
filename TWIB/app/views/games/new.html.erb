<h3>New Game</h3>


<%= form_tag(games_url, method: 'post') do %>


  <div>
    <%= label_tag :home_team_id %><br />
    <%= select_tag :home_team_id, options_from_collection_for_select(Team.order('team_name asc'), :id, :team_name) %>
  </div>

  <div>
    <%= label_tag :visiting_team_id %><br />
    <%= select_tag :visiting_team_id, options_from_collection_for_select(Team.order('team_name asc'), :id, :team_name) %>
  </div>

  <div>
    <%= label_tag :line %><br />
    <%= text_field_tag :line %>
  </div>

  <div>
    <%= label_tag :home_team_result %><br />
    <%= check_box_tag :home_team_result? %>
  </div>


  <div>
    <%= submit_tag "Create Game" %>
  </div>
<% end %>
