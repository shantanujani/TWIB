<h3>Game #<%= @game.id %></h3>

<p>
  <b>Home team:</b>
  <%= @game.home_team.team_name %>
</p>

<p>
  <b>Visiting team:</b>
  <%= @game.visiting_team.team_name %>
</p>

<p>
  <b>Line:</b>
  <%= @game.line %>
</p>

<p>
  <b>Home team result:</b>
  <%= @game.home_team_result %>
</p>

<%= link_to 'Assign Bets', award_bets_url(@game) %>







<br></br>
<table>
   <thead>
    <tr>
      <th>Game</th>
      <th>Username</th>
      <th>Home units wagered</th>
      <th>Away units wagered</th>
      <th>Home units awarded</th>
      <th>Away units awarded</th>
      <!-- <th>Home team result</th> -->
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
<tbody>
  <% @bet.each do |bet| %>
    <tr>
      <td><%= "#{bet.game.home_team.team_name}  vs. #{bet.game.visiting_team.team_name}" %> </td>
      <td><%= bet.user.username %></td>
      <td><%= bet.home_bets_placed %></td>
      <td><%= bet.away_bets_placed %></td>
      <td><%= bet.home_bets_awarded %></td>
      <td><%= bet.away_bets_awarded %></td>

<% if User.find_by_id(session["user_id"]).commissioner == "Site Admin" %>
      <td><%= link_to 'Show', bet_url(bet) %></td>
      <td><%= link_to 'Edit', edit_bet_url(bet) %></td>
      <td><%= link_to 'Destroy', bet_url(bet), method: 'delete', data: { confirm: "Do you really want to delete this bet?" } %></td>
<% end %>

    </tr>
  <% end %>
  </tbody>
